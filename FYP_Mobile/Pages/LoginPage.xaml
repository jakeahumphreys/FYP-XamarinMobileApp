<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FYP_Mobile.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <BoxView HeightRequest="10"></BoxView>
            <Frame BackgroundColor="Azure" HasShadow="True">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name ="Username" Text="{Binding Username}" Placeholder="Username" Keyboard="Email"></Entry>
                    <Entry x:Name="Password" Text="{Binding Password}"  IsPassword="true"></Entry>
                </StackLayout>
            </Frame>
            <Button Command="{Binding SubmitCommand}" Text="Login"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>